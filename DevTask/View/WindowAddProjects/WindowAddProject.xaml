<Window x:Class="DevTask.View.WindowAddProjects.WindowAddProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevTask.View.WindowAddProjects"
        mc:Ignorable="d"
        Title="Создать новый проект" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название проекта" Margin="0,0,0,10"/>
            <TextBox x:Name="ProjectNameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Пригласить пользователей (через запятую)" Margin="0,0,0,10"/>
            <TextBox x:Name="InviteUsersTextBox" Margin="0,0,0,20"/>

            <Button Content="Создать проект" Click="CreateProjectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
