<Window x:Class="DevTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Registration Form -->
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label Content="Имя пользователя" />
            <TextBox />

            <Label Content="Электронная почта" />
            <TextBox />

            <Label Content="Пароль" />
            <PasswordBox />

            <Button Content="Зарегистрироваться" Margin="0,20,0,0" />
            <Button Content="По логину" />

            <Label Content="Создать аккаунт с помощью:" />
            <!-- Add Google sign-in button here -->
        </StackPanel>

        <!-- Profile Picture Placeholder -->
        <Border Grid.Column="2" Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Width="100" Height="100">
            <TextBlock Text="X" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="48" />
        </Border>
    </Grid>
</Window>
